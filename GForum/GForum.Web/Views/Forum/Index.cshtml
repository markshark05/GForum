@model GForum.Web.Models.Forum.ForumIndexViewModel
@{
    ViewBag.Title = "Categories";
}

<div class="row">
    <div class="col-xs-12">
        <h2 class="text-center">@ViewBag.Title</h2>
        @foreach (var category in Model.Categories)
        {
            <div class="category">
                <a class="title" href="@category.Id">@category.Title</a>
                <div class="text-muted">
                    <span>Created by</span>
                    @Html.ActionLink(category.Author.UserName, "Index", "Users", new { username = category.Author.UserName }, null)
                    <span>@category.CreatedOn.Humanize(dateToCompareAgainst: DateTime.Now)</span>
                    <span>&ndash;</span>
                    <span class="post-count">@("post".ToQuantity(category.PostsCount))</span>
                </div>
            </div>
        }
    </div>
</div>

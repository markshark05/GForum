@model GForum.Web.Models.Forum.PostViewModel
@{
    ViewBag.Title = "Post";
}

<div class="row">
    <div class="col-xs-10">
        <div class="card">
            <div style="float:left;height:40px;width:15px;padding-top: 20px">
                @using (Ajax.BeginForm("Vote", new { postId = Model.Id, voteType = "Upvote" }, null))
                {
                    <button class="glyphicon glyphicon-arrow-up"></button>
                }
                @using (Ajax.BeginForm("Vote", new { postId = Model.Id, voteType = "Downvote" }, null))
                {
                    <button class="glyphicon glyphicon-arrow-down"></button>
                }
            </div>
            <div style="margin-left:35px">
                <h2 class="title">@Model.Title</h2>
                <p class="text-muted">
                    Submitted by
                    @Html.ActionLink(Model.Author.UserName, "Index", "Users", new { username = Model.Author.UserName }, null)
                    @Model.CreatedOn.Humanize(dateToCompareAgainst: DateTime.Now)
                </p>
                <div class="content">@Html.MarkdownToHtml(Model.Content)</div>
            </div>
        </div>
    </div>
    <div class="col-xs-2">
        @Html.ActionLink(
            "Submit a new post",
            "Submit",
            new { catgeoryId = Model.CategoryId },
            new { @class = "btn btn-primary" }
        )
    </div>
</div>
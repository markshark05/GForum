@using GForum.Web.Models.Categories
@model CategoryWithPostsViewModel
@{
    ViewBag.Title = $"{Model.Title} catgeory";
}

<h2 class="text-center">Category <strong>@Model.Title</strong></h2>

<div class="row">
    <div class="col-xs-12 text-right margin-bottom">
        <div class="margin-bottom">
            <a class="btn btn-primary" href="@Url.Action("Submit", "Posts", new { catgeoryId = Model.Id })">
                Submit a new post to <strong>@Model.Title</strong>
            </a>
        </div>
    </div>
    <div class="col-xs-12">
        @foreach (var post in Model.Posts)
        {
            <div class="card">
                @Html.Partial("_VotesPartial", post)
                <div style="margin-left:40px">
                    <h4 class="title-one-line">
                        @Html.ActionLink(post.Title, "Post", "Posts", new { id = post.Id }, null)
                    </h4>
                    <p class="text-muted">
                        @Html.Partial("_SubmittedByPartial", post)
                    </p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/Site/votes-controller.js"></script>
}
